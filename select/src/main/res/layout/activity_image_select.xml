<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.imagetools.select.activity.ImageSelectActivity">

    <GridView
        android:id="@+id/gv_images"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:paddingStart="@dimen/item_padding"
        android:paddingLeft="@dimen/item_padding"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/item_padding"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/const_navigation"
        app:layout_constraintTop_toBottomOf="@id/image_select_bar" />

    <com.imagetools.select.widget.StreamerView
        android:id="@+id/streamer_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/const_navigation"
        app:layout_constraintTop_toBottomOf="@id/image_select_bar"
        app:streamer_columnCount="4"
        app:streamer_itemColor="@color/colorPlaceholder"
        app:streamer_itemLineColor="@color/colorBackground"
        app:streamer_streamerColor="@color/colorItem" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorNavigation"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/review_text"
            android:textColor="@color/colorTextPair"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/cb_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@drawable/selector_check_original"
            android:padding="6dp"
            android:text="@string/original_description"
            android:textColor="@color/colorText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_button_normal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:text="@string/done_text"
            android:textColor="@color/colorTextPair"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0"
        android:visibility="invisible"
        android:background="@color/colorMask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_select_bar" />

    <ListView
        android:id="@+id/lv_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:divider="@null"
        android:visibility="invisible"
        android:dividerHeight="0dp"
        android:footerDividersEnabled="false"
        android:maxHeight="260dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/image_select_bar" />

    <com.imagetools.select.widget.ImageSelectBar
        android:id="@+id/image_select_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>