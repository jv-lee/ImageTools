<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.imagetools.select">

    <application
        android:requestLegacyExternalStorage="true"
        tools:targetApi="q">
        <activity
            android:name="com.imagetools.select.activity.ImageSelectActivity"
            android:theme="@style/ImageSelectActivity" />
        <provider
            android:name=".provider.ImageProvider"
            android:authorities="com.imagetools.select.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/image_provider_paths" />
        </provider>
    </application>
</manifest>